<%= form_with(model: @user, url: sessions_path, method: :post) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="form-group container">
      <%= form.label :name, 'Nombre', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :name, id: :user_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group container">
      <%= form.label :password, 'Contraseña', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.password_field :password, id: :user_password, class: "form-control" %>
      </div>
    </div>

    <div class="actions form-group container">
      <div class="col-lg-10 col-lg-offset-2">
        <%= form.submit "Iniciar sesión", class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
